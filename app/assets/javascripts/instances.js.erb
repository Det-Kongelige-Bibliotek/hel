$(document).ready(function () {
    $('input[name="instance[copyright_status]"]').change(function (e) {
        if ($('input[value=agent]')[0].checked) {
            $('#agent').slideDown();

        } else {
            $('#agent').slideUp();
        }
        $('input[name=copyright_status]')[$('input[value=agent]')[0].checked ? 'slideDown' : 'slideUp']();
    });
});


