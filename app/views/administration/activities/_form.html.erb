<%= simple_form_for(@activity, html: { class: 'form-horizontal' }, defaults: {
        wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> <%= t('.no_save_error') %></h2>
      <ul>
      <% @activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="instans editMode">
    <div class="row">
      <div class="col-sm-9">
        <%= render partial: 'instances/administrative', locals: { builder: f } %>
        <fieldset class="row">
        <legend class="col-sm-12">
          <%= t('.edit_in_GUI') %>
        </legend>
          <p>Skal det vÃ¦re muligt at oprette nye instanser under denne aktivitet fra grÃ¦nsefladen</p>

          <%= f.radio_button :edit_in_GUI,'1', :checked => @activity.edit_in_GUI != 0 %>
          <%= label_tag(:age_child, "Ja") %>
          <%= f.radio_button :edit_in_GUI,'0', :checked => @activity.edit_in_GUI == 0 %>
          <%= label_tag(:age_child, "Nej") %>
        </fieldset>
        <%= render partial: 'default_permissions', locals: { builder: f } %>
        <%= render partial: 'dissemination', locals: { builder: f } %>
        <div class="btn-group pull-right">
          <%= f.button :button, 'Gem', class: 'btn btn-success' do %>
              <span class="glyphicon glyphicon-save"></span>
              <%= t('.gem') %>
          <% end %>
        </div>
    </div>
    </div>

</div>
<% end %>
