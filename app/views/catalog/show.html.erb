<% if (@document['has_model_ssim'] & ['LetterBook']).present? %>
    <div id="sidebar" class="<%= show_sidebar_classes %>">
      <%= render partial: 'show_sidebar_letter_book' %>
    </div>
    <div id="content" class="<%= show_content_classes %>">
      <%= render partial: 'show_main_content_letter_book' %>
    </div>
<% elsif (@document['has_model_ssim'].include? 'Letter').present? %>
    <div id="sidebar" class="<%= show_sidebar_classes %>">
      <%= render partial: 'show_sidebar_letter' %>
    </div>
    <div id="content" class="<%= show_content_classes %>">
      <%= render partial: 'show_main_content_letter' %>
    </div>
<% end %>




