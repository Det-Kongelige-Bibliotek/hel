<%= form_tag("/statistics", method: "get") do |f| %>
    <%= label_tag(:format_name_tesim, "Search for format name:") %>
    <%= text_field_tag(:format_name_tesim) %>
    <br/>
    <%= label_tag(:format_version_tesim, "Search for format version:") %>
    <%= text_field_tag(:format_version_tesim) %>
    <br/>
    <%= label_tag(:format_mimetype_tesim, "Search for mimetype:") %>
    <%= text_field_tag(:format_mimetype_tesim) %>
    <br/>
    <%= label_tag(:format_pronom_id_si, "Search for pronom id:") %>
    <%= text_field_tag(:format_pronom_id_si) %>
    <br/>
    <%= label_tag(:collection_tesim, "Search for collection:") %>
    <%= select_tag(:collection_tesim, options_for_select(get_list_with_labels('Collections')), include_blank: true ) %>
    <br/>
    <%= label_tag(:activity_tesim, "Search for activity:") %>
    <%= select_tag(:activity_tesim, options_for_select(Administration::Activity.all.collect {|a| [ a.activity, a.id ] }), include_blank: true)  %>
    <br/>
    <%= label_tag(:preservation_profile_tesim, "Search for preservation profile:") %>
    <%= text_field_tag(:preservation_profile_tesim) %>
    <br/>
    <%= label_tag(:embargo_tesim, "Search for embargo:") %>
    <%= select_tag(:embargo_tesim, options_for_select({"embargoed" => '1', "Not embargoed" => '0'}), include_blank: true ) %>
    <br/>
    <%= label_tag(:instance_type_tesim, "Search for files belonging to instance types:") %>
    <%= select_tag(:instance_type_tesim, options_for_select(get_list_with_labels('Instance types')), include_blank: true ) %>
    <br/>
    <%= label_tag(:material_type_tesim, "Search for material type:") %>
    <%= text_field_tag(:material_type_tesim) %>
    <br/>
    <%= label_tag(:created_dtsim_min, "Lower datetime limit:") %>
    <%= datetime_select(:created_dtsim, :min_time, include_blank: true) %>
    <br/>
    <%= label_tag(:created_dtsim_max, "Upper datetime limit:") %>
    <%= datetime_select(:created_dtsim, :max_time, include_blank: true) %>
    <br/>
    <%= submit_tag("Search") %>
<% end %>
