<div class="work editMode">

  <div class="page-header">
    <div class="container">
      <h1>Værk <small id="headerTitle"><%= @work.title_values.first%><%= is_new %></small></h1>
    </div>
  </div>

  <div class="container">
    <%= form_for @work do |f| %>
        <% if @work.titles.length > 0  %>
            <h3>Titler</h3>
            <% @work.titles.each do |title| %>
                <%= render  partial: 'title',  locals: {title: title , is_new: is_new} %>
            <% end%>
        <% end %>
        <hr/>
        <div data-hook="empty_titles">
          <%= render partial: 'title', locals: {title: Datastreams::Bibframe::Title.new, is_new: is_new} %>
        </div>
        <a class="btn btn-sm btn-primary" href="#" data-function="new-title">
          <span class="glyphicon glyphicon-plus"></span>
          Tilføj Titel
        </a>
        <div class="actions">
          <%= f.submit 'Gem værk',  class: 'btn btn-lg btn-primary col-sm-offset-11' %>
        </div>
    <% end %>
  </div>
</div>