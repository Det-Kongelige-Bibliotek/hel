<%= work_form.simple_fields_for :titles,
                                defaults: { wrapper_html: { class: 'form-group' },
                                            input_html: { class: 'form-control' }
                                } do |title_fields| %>

    <% hidden_class = hidden ? 'hide' : '' %>
    <div class="title_fields <%= hidden_class %>">
      <a class="btn btn-sm btn-error col-sm-offset-11" href="#" data-function="delete-title">
        <span class="glyphicon glyphicon-minus"></span>
        <%= t('.close') %>
      </a>
      <div class='col-sm-8'>
        <%= title_fields.input :value, placeholder: 'Titel' %>
      </div>
      <div class='col-sm-2'>
        <%= title_fields.input :variant, collection: get_controlled_vocab('Title types'), label: 'Type', input_html: { class: 'combobox form-control' }  %>
      </div>
      <div class='col-sm-12'>
        <%= title_fields.input :subtitle, label: 'Undertitel', placeholder: 'Undertitel' %>
      </div>
    </div>
<% end %>
