<!-- Work -->
<%# We render this page as a partial to enable us to include it in the Instance show view %>
<div class="work previewMode">
  <div class="container">

    <div class="page-header">
      <div class="btn-group pull-right">

        <%= link_to 'Edit', edit_work_path(@work), class: 'btn btn-primary' %>
      </div>
      <% if @work.titles.size > 0 %>
      <h1>
        <span class="label label-success fa fa-files-o"> </span>
        <%= @work.titles.first.value %><br>
        <small><%= @work.titles.first.subtitle %></small>
      </h1>
      <% end %>
    </div>


    <h4>Titler</h4>
    <table class="table table-striped"><tbody>
      <% @work.titles.each do |title| %>
      <tr>
        <td>
          <strong>Titel</strong>
        </td>
        <td>
          <span><%= title.value%></span>
        </td>
      </tr>
      <tr>
        <td>
          <strong>Undertitle</strong>
        </td>
        <td>
          <span><%= title.subtitle%></span>
        </td>
      </tr>
        <tr>
          <td>
            <strong>Sprog</strong>
          </td>
          <td>
            <span><%= title.lang %></span>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Type</strong>
          </td>
          <td>
            <span><%= title.type%></span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <h4>Ophav</h4>
    <table class="table table-striped"><tbody>
    <% @work.creators.each do |creator| %>
      <tr>
        <td>
          <strong>Navn</strong>
        </td>
        <td>
          <span><%= creator['display_value'] %></span>
        </td>
      </tr>
        <tr>
          <td>
            <strong>Type</strong>
          </td>
          <td>
            <span><%= creator['type'] %></span>
          </td>
        </tr>
    <% end %>
    </tbody></table>
    <div class="row">
      <div class="col-sm-offset-4">
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <%= "#{@work.instances.size} instanser" %> <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <% @work.instances.each do |instance| %>
                <li><a href="<%= url_for([@work, instance]) %>">
                  <%= instance.class %>
                </a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </div>
  <div class="dot"></div>
</div>
<!-- Work end -->


