<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<% sid = params['sid'] %>
<% id = params['id'] %>
<% coll = "/db#{ sid[0,sid.rindex('/')] }" %>


<div class="container nav-tab-instance-fixContainer">
  <div class="row">
    <div class="col-md-12">
      <div class="nav-tab-instance-2">
        <ul class="nav nav-tabs">
          <li  role="presentation">
            <a data-toggle="tab" href="#letter" >Letter</a>
          </li>
          <li role="presentation">
            <a data-toggle="tab" href="#facs" >Facsimile</a>
          </li>
        </ul>
      </div>
      <div class="tab-content">
        <div id="letter" class="tab-pane active">
          <% book_id, div_id = sid.split('-') %>
          <% text2 ||= SnippetServer.render_snippet(book_id, {:c=> coll}) %>
          <%= text2.html_safe %>
        </div>
        <div id="facs" class="tab-pane">
          <%= SnippetServer.facsimile(sid, {c: coll}).html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>