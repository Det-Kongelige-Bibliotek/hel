<% @letter_book ||= LetterBook.find(id) %>
<% @instance ||= @letter_book.instances.first %>
<div class="work previewMode">
  <div class="container">
    <h4><%= t('letter_books.title') %></h4>
    <% if @letter_book.titles.size > 0 %>
        <%= @letter_book.titles.first.value %><br>
    <% end %>
    <h4><%= t('letter_books.origin_date') %></h4>
    <%= @letter_book.origin_date %>
    <h4><%= t('letter_books.edition') %></h4>
    <%= @instance.edition %>
    <h4><%= t('letter_books.notes') %></h4>
    <%= @instance.note %>
  </div>
</div>