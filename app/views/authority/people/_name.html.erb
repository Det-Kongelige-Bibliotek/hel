 -->
  <div class='form-group'>
    <div class='col-sm-4'>
      <label><%= t('person.given') %></label>
    </div>
    <div class='col-sm-4'>
      <input class="form-control" value="<%= name[:given] %>" name="authority_person[authorized_personal_name][][given]"/>
    </div>
    <span class="help-block"></span>
  </div>
  <div class='form-group'>
    <div class='col-sm-4'>
      <label><%= t('person.family') %></label>
    </div>
    <div class='col-sm-4'>
      <input class="form-control" value="<%= name[:family] %>" name="authority_person[authorized_personal_name][][family]"/>
    </div>
    <span class="help-block"></span>
  </div>
  <% unless name[:full].blank? %>
  <div class='form-group'>
    <div class='col-sm-4'>
      <label><%= t('person.full') %></label>
    </div>
    <div class='col-sm-4'>
      <input class="form-control" value="<%= name[:full] %>" name="authority_person[authorized_personal_name][][full]"/>
    </div>
    <span class="help-block"></span>
  </div>
  <% end %>
  <div class='form-group' data-hook="dates">
    <div class='col-sm-2'>
      <label>Født</label>
    </div>
    <div class='col-sm-4'>
      <input data-hook="dateofbirth" class="form-control valid-date" value="" name="authority_person[authorized_personal_name][][dateofbirth]"/>
    </div>
    <div class='col-sm-2'>
      <label>Død</label>
    </div>
    <div class='col-sm-4'>
      <input data-hook="dateofdeath" class="form-control valid-date" value="" name="authority_person[authorized_personal_name][][dateofdeath]"/>
    </div>
    <input data-hook="date" type="hidden" name="authority_person[authorized_personal_name][][date]" value="<%= name[:date] %>">
    <span class="help-block"></span>
  </div>

</div>
