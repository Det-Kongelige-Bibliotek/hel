<a id="administrative"></a><h4><%= t('.label') %></h4>
<table class="table table-striped"><tbody>
<tr>
<td>
  <strong><%= t('.activity') %></strong>
</td>
<td>
  <span><%= Administration::Activity.find(@instance.activity).activity rescue nil %></span>
</td>
</tr>
<tr>
  <td>
    <strong><%= t('.collection') %></strong>
  </td>
  <td>
    <span><%= @instance.collection.to_sentence %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('.copyright') %></strong>
  </td>
  <td>
    <span><%= @instance.copyright %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('embargo_date') %></strong>
  </td>
  <td>
    <span><%= @instance.embargo_date %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('.embargo_condition') %></strong>
  </td>
  <td>
    <span><%= @instance.embargo_condition %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.administrative.is_available') %></strong>
  </td>
  <td>
    <span><%= @instance.availability == '1' ? 'Ja' : 'Nej' %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.show_administrative.preservation_collection') %></strong>
  </td>
  <td>
    <span><%= @instance.preservation_collection %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.show_administrative.preservation_state') %></strong>
  </td>
  <td>
    <span><%= @instance.preservation_state %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.show_administrative.preservaton_details') %></strong>
  </td>
  <td>
    <span><%= @instance.preservation_details %></span>
  </td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.show_administrative.preservation_date') %></strong>
  </td>
  <td>
    <span><%= @instance.preservation_modify_date %></span>
  </td>
</tr>
<tr>
  <td><strong><%= t('instances.show_administrative.preservation_initiated_date') %></strong></td>
  <td><%= @instance.preservation_initiated_date %></td>
</tr>
<tr>
  <td>
    <strong><%= t('instances.show_administrative.warc_id') %></strong>
  </td>
  <td>
    <span><%= @instance.warc_id %></span>
  </td>
</tr>
<% if @instance.copyright_status.present? %>
    <tr>
      <td>
        <strong><%= t('.copyright_status') %></strong>
      </td>
      <td>
        <span>
        <% if @instance.copyright_status == ('Ukendt' or 'Udloebet') %>
           <%= @instance.copyright_status %>
        <% else %>
           <% agent = Authority::Person.find(@instance.copyright_status) %>
           <%= link_to  agent.display_value, agent %>
        <% end %>
            </span>
      </td>
    </tr>
<% end %>
</tbody></table>