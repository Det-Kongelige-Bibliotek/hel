
<!--Administrative metadata -->
<fieldset class="row" id="administrative">
  <legend class="col-sm-12">
    <%= t '.admin_header' %>
  </legend>
  <div class="col-sm-12">
    <%#
        We render this as a partial to enable different views that include this form to define it differently
        e.g. as a dropdown or a text input.
    %>
    <%= render partial: 'activity_input', locals: { builder: builder } %>
    <hr>
  </div>
  <div class="col-sm-12">
    <%= builder.input :collection, collection: get_list_with_labels('Collections'), prompt: t('.collection') %>
    <hr>
  </div>

    <legend class="col-sm-12">
      <h4><%= t('.embargo') %></h4>
    </legend>

      <div class="col-sm-2">
        <%= builder.input :embargo, as: :boolean, boolean_style: :inline,
                          label_html: { class: 'checkbox-inline' }, wrapper_html: { class: ''  },
                          input_html: { class: '', data: { toggle: 'embargo_detailed' } } %>

      </div>

      <div class="col-sm-3">
        <%= builder.input :embargo_date, input_html: { data: { hook: 'embargo_detailed' }} %>
      </div>

      <div class="col-sm-3">
        <%= builder.input :embargo_condition, input_html: { data: { hook: 'embargo_detailed' }} %>
      </div>

      <div class="col-sm-3 col-md-offset-1">
        <%= builder.input :access_condition, collection: get_controlled_vocab('Access types'),  prompt: t('.klaus') %>
      </div>

      <legend class="col-sm-12">
        <h4><%= t('.availability') %></h4>
      </legend>

      <div class="col-sm-6">
        <%= builder.input :copyright, collection: get_controlled_vocab('Copyright Licenses'),  prompt: t('.license') %>
      </div>

      <div class="row">
      <div class="col-sm-3">
        <%= builder.input :availability, as: :boolean, boolean_style: :inline,
                          label: t('.is_available'), label_html: { class: 'checkbox-inline' },
                          wrapper_html: { class: ''  }, input_html: { class: '' }
        %>
        </div>

    </div>
</fieldset>
  <fieldset class="row">
    <legend class="col-sm-12">
      <h4><%= t('.preservation') %></h4>
    </legend>


    <div class="col-sm-4">
      <%= builder.label :preservation_profile, t('.preserv_profile') %>
      <%= builder.select :preservation_profile, options_for_select(get_preservation_profiles_for_select,
                                                                   @instance.blank? ? '' :  @instance.preservation_profile)%>
    </div>
  </fieldset>


